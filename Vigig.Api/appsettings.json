{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSetting": {
    "Issuer": "https://localhost:10000",
    "Audience": "http://localhost:3000",
    "SigningKey": "",
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateIssuerSigningKey": true,
    "ValidateLifetime": true,
    "AccessTokenLifetimeInMinutes": 60,
    "RefreshTokenLifetimeInMinutes": 480
  },
  "CorsSetting": {
    "AllowedOrigins": "http://localhost:3000,https://vigig.io.vn",
    "AllowedMethods": "*",
    "AllowedHeaders": "*",
    "AllowedCredentials": true
  },
  "SwaggerSetting": {
    "Version": "v1.0",
    "Title": "Vigig API",
    "Description": "Vigig API",
    "TermsOfServiceUrl": "https://www.example.com",
    "ContactName": "Vigig - TechDesMar",
    "ContactUrl": "https://github.com/Vigig-TechDesMar/vigig-web-server",
    "LicenseName": "No license",
    "LicenseUrl": "https://www.example.com",
    "Options": {
      "Servers": [
        {
          "Url": "https://localhost:10000",
          "Description": "Local server for Vigig API",
          "Variables": []
        }
      ],
      "SecurityScheme": {
        "Name": "Bearer",
        "Description": "JWT authentication with .NET Identity",
        "Type": "Http",
        "Location": "Header"
      },
      "SecurityRequirement": {
        "Type": "SecurityScheme",
        "Id": "Bearer"
      }
    }
  }
}
